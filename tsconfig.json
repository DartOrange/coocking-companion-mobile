{
  "compilerOptions": {
    "jsx": "react-native",
    "allowJs": true,
    "esModuleInterop": true,
    "strict": true,
    "target": "esnext",
    "module": "node16",
    "moduleResolution": "node16",
    "skipLibCheck": true,
    "customConditions": ["react-native"],
    "paths": {
      "@/*": ["./app/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "app.config.ts"],
  "extends": "expo/tsconfig.base"
}
